# Define the Flume agent
agent.sources = source1
agent.sinks = sink1
agent.channels = channel1

# Define the source (spool directory)
agent.sources.source1.type = spooldir
agent.sources.source1.spoolDir = /home/maria_dev/log  # Path where your log file is saved
agent.sources.source1.fileHeader = true

# Define the sink (Avro or Kafka can be used; below is an example for Kafka)
agent.sinks.sink1.type = avro
agent.sinks.sink1.hostname = localhost  # Flume's receiving endpoint
agent.sinks.sink1.port = 9092          # Port where Flume sink listens (change if needed)

# Define the channel (memory for faster throughput)
agent.channels.channel1.type = memory
agent.channels.channel1.capacity = 1000
agent.channels.channel1.transactionCapacity = 100

# Connect source to channel and channel to sink
agent.sources.source1.channels = channel1
agent.sinks.sink1.channel = channel1
